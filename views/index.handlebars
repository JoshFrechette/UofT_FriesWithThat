<!-- Placeholder -->
<img src="/public/assets/images/burger.png" >
<h1>Eat-Da-Burger!</h1>

<div class="col-10">
    <input class="submit-burger" maxlength="50" type="text">
    <textarea class="burger-textarea"></textarea>
    <button type="submit">Submit</button>
    <p>Enter a burger you want to eat and Click the "Submit" button</p>
</div>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burger/burger-block eaten=false}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burger/burger-block eaten=true}}
    {{/if}}
  {{/each}}
</ul>
