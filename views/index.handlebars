<!-- Placeholder -->
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col">
      <img src="/assets/images/burger.png">
      <h1>Eat-Da-Burger!</h1>
    </div>
  </div>


  <div class="row">
    <div class="col-6 new">
      <ol>
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block eaten=false}}
        {{/unless}}
        {{/each}}
      </ol>
    </div>

    <div class="col-6 devoured">
      <ol>
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/eaten-block eaten=true}}
        {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-10 input">
      <form class="create-form">
        <div class="form-group">
          <input class="submit-burger" id="burgs" name="choice" maxlength="50" type="text">
          <br>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
      <p>Enter a burger you want to eat and click the "Submit" button</p>
    </div>
  </div>
</div>